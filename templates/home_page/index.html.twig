			</div>
			<p class="main__welcome">{{ home_page.welcomeText }}</p>
		</section>

		<section class="repair">
			<h2 class="repair__section-title">{{ home_page.repairSectionTitle }}</h2>
			<p class="repair__section-text">{{ home_page.repairSectionText }}</p>
		</Section>

		<section class="used">
			<h2 class="used__cars-title">{{ home_page.usedCarsSectionTitle }}</h2>
			<p class="used__cars-text">{{ home_page.usedCarsSectionText }}</p>
			<div id="carouselExampleInterval" class="carousel slide" data-bs-ride="carousel">
				<div class="carousel-inner">
					<div class="carousel-item active" data-bs-interval="4000">
					<img src="{{ asset('images/american-classic-car-1.jpg')}}" class="d-block w-90" alt="american car">
					</div>
					<div class="carousel-item" data-bs-interval="4000">
					<img src="{{ asset('images/antique-car.jpg')}}" class="d-block w-90" alt="american car">
					</div>
					<div class="carousel-item" data-bs-interval="4000">
					<img src="{{ asset('images/car-cuba.jpg')}}" class="d-block w-90" alt="american car">
					</div>
				</div>
				<button class="carousel-control-prev btn-danger" type="button" data-bs-target="#carouselExampleInterval" data-bs-slide="prev">
					<span class="carousel-control-prev-icon" aria-hidden="true"></span>
					<span class="visually-hidden">Previous</span>
				</button>
				<button class="carousel-control-next" type="button" data-bs-target="#carouselExampleInterval" data-bs-slide="next">
					<span class="carousel-control-next-icon" aria-hidden="true"></span>
					<span class="visually-hidden">Next</span>
				</button>
			</div>
		</Section>
		<section class="opinion">
			<h2 class="opinion__section-title">{{ home_page.opinionsSectionTitle }}</h2>
			<p class="opinion__section-text">{{ home_page.opinionsSectionText }}</p>
		</Section>
		{% if is_granted('ROLE_ADMIN') %}		
			<div class="main">
				<a class="button" href="{{ path('app_home_page_edit', {'id': home_page.id }) }}">Modifier</a>
			</div>
		{% endif %}
	{% endfor %}
{% endblock %}
