{% extends 'base.html.twig' %}

{% block title %}Enregistrement nouvel employ√©s{% endblock %}

{% block body %}
    <main class='form-flux register-form flex-center'>
        <h2 class="register-form__title">Enregistrement</h1>
        <section class="register-form__flux">
            {{ form_start(registrationForm, {'attr': {'class': 'register-form__form'}}) }}
                {{ form_row(registrationForm.email) }}
                {{ form_row(registrationForm.plainPassword, {
                    label: 'Mot de passe'
                }) }}
                {{ form_row(registrationForm.name) }}
                {{ form_row(registrationForm.firstname)}}
                <div class='flex-center register-form__button'>
                    <button type="submit" class="btn buton">Enregistrer</button>
                </div>
            {{ form_end(registrationForm) }}
        </section>
    </main>
{% endblock %}
