{% extends 'base.html.twig' %}

{% block title %}Cars{% endblock %}

{% block body %}
    <h1>Cars</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ car.id }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ car.price }}</td>
            </tr>
            <tr>
                <th>ImageName</th>
                <td>{{ car.imageName }}</td>
            </tr>
            <tr>
                <th>Years</th>
                <td>{{ car.years }}</td>
            </tr>
            <tr>
                <th>Kilometers</th>
                <td>{{ car.kilometers }}</td>
            </tr>
            <tr>
                <th>CarPresentationText</th>
                <td>{{ car.carPresentationText }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ car.createdAt ? car.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ car.updatedAt ? car.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_cars_index') }}">back to list</a>

    <a href="{{ path('app_cars_edit', {'id': car.id}) }}">edit</a>

    {{ include('cars/_delete_form.html.twig') }}
{% endblock %}
