{% extends 'base.html.twig' %}

{% block title %}Opinions{% endblock %}

{% block body %}
    <h1>Opinions</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ opinion.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ opinion.name }}</td>
            </tr>
            <tr>
                <th>Comment</th>
                <td>{{ opinion.comment }}</td>
            </tr>
            <tr>
                <th>Score</th>
                <td>{{ opinion.score }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ opinion.createdAt ? opinion.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>IsModerated</th>
                <td>{{ opinion.isModerated ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_opinion_page_index') }}">back to list</a>

    <a href="{{ path('app_opinions_edit', {'id': opinion.id}) }}">edit</a>

    {{ include('opinions/_delete_form.html.twig') }}
{% endblock %}
